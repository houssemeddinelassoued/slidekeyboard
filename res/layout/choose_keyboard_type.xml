<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:asigbe="http://schemas.android.com/apk/res/com.asigbe.slidekeyboardpro"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:text="@string/choose_your_type" android:layout_marginBottom="20dip" />
	<Button android:id="@+id/alphabeticButton" android:text="@string/alphabetic"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginBottom="20dip" android:bufferType="normal" />
	<Button android:id="@+id/azertyButton" android:text="@string/azerty"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginBottom="20dip" />
	<Button android:id="@+id/qwertyButton" android:text="@string/qwerty"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginBottom="20dip" />
	<Button android:id="@+id/dvorakButton" android:text="@string/dvorak"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginBottom="20dip" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:text="@string/settings_can_be_changed_later" android:textSize="12dip" />
</LinearLayout>
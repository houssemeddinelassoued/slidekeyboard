<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:asigbe="http://schemas.android.com/apk/res/com.asigbe.slidekeyboardpro"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:text="@string/how_does_it_work_explanation" android:layout_marginBottom="20dip" />
	<ImageView android:id="@+id/alphabeticButton"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/key_with_arrows" android:layout_gravity="center_horizontal"/>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:text="@string/if_you_dont_like" android:layout_marginBottom="20dip" />
	<Button android:id="@+id/doneButton" android:text="@string/done"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginBottom="20dip" />
</LinearLayout>
</ScrollView>